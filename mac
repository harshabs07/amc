; Directives MUST start in column 1 (no spaces)
        THUMB
        AREA    my_code, CODE, READONLY
        
        EXPORT  main
        ENTRY

; Labels MUST start in column 1
main
        ; Instructions MUST be indented (at least one space)
        ldr r0, =x
        ldr r1, =y
        ldr r2, =n
        ldr r2, [r2]
        
        mov r4, #0

loop
        ldr r5, [r0], #4
        ldr r6, [r1], #4
        
        mul r7, r5, r6
        add r4, r4, r7
        
        subs r2, r2, #1
        bne loop

done
        ldr r8, =result
        str r4, [r8]

stop
        b stop

; Directives MUST start in column 1
        AREA    my_data, DATA, READWRITE, ALIGN=2

; Labels MUST start in column 1
x       DCD     1, 2, 3, 4
y       DCD     5, 6, 7, 8
n       DCD     4
result  DCD     0

; Directives MUST start in column 1
        END
