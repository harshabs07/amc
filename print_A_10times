ORG 0000H
MAIN:
    MOV TMOD, #20H
    MOV TH1, #-3
    MOV SCON, #50H
    SETB TR1

    MOV R2, #10

LOOP_TEN_TIMES:
    MOV A, #'A'
    ACALL SEND_CHAR
    DJNZ R2, LOOP_TEN_TIMES

HERE:
    SJMP HERE

SEND_CHAR:
    MOV SBUF, A
WAIT_FOR_TRANSMIT:
    JNB TI, WAIT_FOR_TRANSMIT
    CLR TI
    RET

END
