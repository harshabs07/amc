.text
    ldr r0, =x
    ldr r1, =y
    ldr r2, =n
    ldr r2, [r2]
    
    mov r4, #0

loop:
    ldr r5, [r0], #4
    ldr r6, [r1], #4
    
    sub r7, r5, r6
    
    cmp r7, #0
    bge no_neg
    rsbs r7, r7, #0

no_neg:
    add r4, r4, r7
    
    subs r2, r2, #1
    bne loop

done:
    ldr r8, =result
    str r4, [r8]

stop:
    b stop

.data
x:      dcd 10, 20, 30, 40
y:      dcd 15, 16, 17, 18
n:      dcd 4
result: dcd 0
