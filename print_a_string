ORG 0000H
MAIN:
    MOV TMOD, #20H
    MOV TH1, #-3
    MOV SCON, #50H
    SETB TR1

    MOV DPTR, #MY_STRING

SEND_LOOP:
    CLR A
    MOVC A, @A+DPTR
    JZ END_OF_STRING
    ACALL SEND_CHAR
    INC DPTR
    SJMP SEND_LOOP

END_OF_STRING:
    SJMP END_OF_STRING

SEND_CHAR:
    MOV SBUF, A
WAIT_FOR_TRANSMIT:
    JNB TI, WAIT_FOR_TRANSMIT
    CLR TI
    RET

MY_STRING:
    DB 'hello', 0

END
